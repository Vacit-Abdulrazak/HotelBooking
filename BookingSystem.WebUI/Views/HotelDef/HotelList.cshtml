@model BookingSystem.Domain.WebUI.Filters.HotelFilter

@{
    ViewBag.Title = "HotelList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageScripts
{
    <script src='@Url.Content("~/Scripts/pages/Hotels/hotellist.js")'></script>
}

@section BrundCrumb{
    @Html.BuildBrandCrumb()
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa fa-filter"></i> Filters</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body" style="">
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                        <div class="form-group">
                            @Html.BTextBoxFor(model => model.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.HotelTypeId, new { @class = "control-label" })
                        <div class="form-group">
                            @Html.BTextBoxFor(model => model.HotelTypeId, new { @class = "checkbox" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer" style="">
                <div class="col-md-12">
                    <div style="float:right; padding-left:2px;">
                        <button type="button" class="btn btn-block btn-danger btnClear">Clear</button>
                    </div>
                    <div style="float:right; padding-right:2px;">
                        <button type="button" class="btn btn-block btn-primary btnSearch">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            @Html.Hidden("hotelAddUrl", Url.Action("HotelAdd", "HotelDef"))
            <div class="box-header">
            </div>
            <div class="box-body">
                <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="col-sm-12">
                        <table id="tableHotelList" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>IsActive</th>
                                    <th>IsDeleted</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    jQuery(document).ready(function () {
        var initObject = [];
        var urls = {
            editButtonUrl: '@Url.Action("HotelEdit", "HotelDef")',
            deleteUrlAction: '@Url.Action("DeleteHotel", "HotelDef")',
            gridLoadUrl: '@Url.Action("GetHotelList", "HotelDef")'
                
        };

        // obje içerisnde kullanımını görmeniz için ekliyorum
        var languageItems = {
            editButtonText : "Edit"
        };

        initObject.urls = urls;
        initObject.languageItems = languageItems;

        Hotellist.init(initObject);
    });
</script>